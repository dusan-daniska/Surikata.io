<!-- top Products -->
<div class="ads-grid_shop">
  <div class="row shop_inner_inf">
    <div class="col-md-6 single-right-left ">
      <div class="grid images_3_of_2">
        <div class="flexslider">
          <ul class="slides">
            <li data-thumb="{{ uploadedFileUrl }}/{{ productInfo.image }}">
              <div class="thumb-image">
                <img
                  src="{{ uploadedFileUrl }}/{{ productInfo.image }}"
                  data-src="{{ uploadedFileUrl }}/{{ productInfo.image }}"
                  data-imagezoom="true"
                  class="img-responsive lozad"
                  alt="{{ productInfo["name_lang_"~languageIndex] }}"
                >
              </div>
            </li>
            {% for imgKey, image in productInfo["gallery"] %}
              <li data-thumb="{{ uploadedFileUrl }}/{{ image["image"] }}">
                <div class="thumb-image">
                  <img
                    src="{{ uploadedFileUrl }}/{{ image["image"] }}"
                    data-src="{{ uploadedFileUrl }}/{{ image["image"] }}"
                    data-imagezoom="true"
                    class="img-responsive lozad"
                    alt="{{ productInfo["name_lang_"~languageIndex] }}"
                  >
                </div>
              </li>
            {% endfor %}
          </ul>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <div class="col-md-6 single-right-left simpleCart_shelfItem">
      <h3>{{ productInfo["name_lang_"~languageIndex] }}</h3>
      {% if productInfo.priceInfo.fullPrice > 0 %}
        <p><span class="item_price">{{ productInfo.priceInfo.salePrice|number_format(2, ",", " ") }} €</span>
          <del>€ {{ productInfo.priceInfo.fullPrice|number_format(2, ",", " ") }}</del>
        </p>
      {% else %}
        <p><span class="item_price">{{ productInfo.priceInfo.salePrice|number_format(2, ",", " ") }} €</span>
        </p>
      {% endif %}
      {% if productInfo.priceInfo.discountTotal > 0 %}
        <span class="item_price discount-flag">{{ productInfo.priceInfo.discountTotal|number_format(2, ",", " ") }} %</span>
      {% endif %}
      <div class="rating1">
        <ul class="stars">
          <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a></li>
          <li><a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a></li>
        </ul>
      </div>
      <div class="description">
        <h5>{{ productInfo["brief_lang_"~languageIndex]|raw }}</h5>
        <!--<form action="#" method="post">
          <input type="text" value="Enter pincode" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter pincode';}"
                 required="">
          <input type="submit" value="Check">
        </form>-->
      </div>
      <div class="color-quality">
        <div class="color-quality-right">
          <h5>{{ translate("quantity") }} :</h5>
          <div class="cart-plus-minus">
            <input class="cart-plus-minus-box" type="text" name="qtybutton" value="1" />
          </div>
        </div>
      </div>
      <div class="occasional">
        <div class="clearfix"> </div>
      </div>
      <div class="occasion-cart">
        <div class="shoe single-item single_page_b">
          <a class="add-to-cart"
             href="javascript:void(0)"
             onclick="
               BasicThemeCart.addProduct(
                 {{ productInfo.id }},
                 $('.cart-plus-minus > input[name=qtybutton]').val(),
                 function(data) {
                   Swal.fire({
                     width: '40rem',
                     title: '<strong>{{ translate("Item was added to cart") }}</strong>',
                     text: 'Do you want to continue',
                     icon: 'success',
                     showCancelButton: true,
                     cancelButtonText: '<span style=\'color: #eee;\'>{{ translate("Continue shopping") }}</span>',
                     cancelButtonColor: '#eeeeee',
                     confirmButtonText: '{{ translate("Go to cart") }}',
                     confirmButtonColor: '#fb383b',
                     customClass: {
                       confirmButton: 'swal-confirm-button',
                       cancelButton: 'swal-cancel-button',
                     }

                   }).then((result) => {
                     if (result.isConfirmed) {
                       window.location.href = '{{ rootUrl }}/{{ callPluginMethod('WAI/Order/CartOverview', 'getWebPageUrl') }}';
                     }
                   });
               });
               "
          >  Add To Cart</a>

        </div>

      </div>

    </div>
    <div class="clearfix"> </div>
    <!--/tabs-->
    <div class="responsive_tabs">
      <div id="horizontalTab">
        <ul class="resp-tabs-list">
          <li>{{ translate("Description") }}</li>
          <li>{{ translate("Accessories") }}</li>
          <li>{{ translate("Information") }}</li>
        </ul>
        <div class="resp-tabs-container">
          <!--/tab_one-->
          <div class="tab1">

            <div class="single_page">

              {{ productInfo["description_lang_"~languageIndex]|raw }}

            </div>
          </div>
          <!--//tab_one-->
          {% if show_accessories %}
            <div class="tab3">
              <h2>Accessories</h2>
              <div class="single_page">
                <div class="row">
                  {% for product in productInfo.prislusenstvo %}
                    <div class="slider-single-item">
                      <article class="list-product text-center">
                        <div class="product-inner">
                          <div class="img-block">
                            <a href="{{ rootUrl}}/{{ product.url }}" class="thumbnail">
                              <img class="first-img" src="{{ rootUrl }}/theme/assets/images/product-image/4.jpg" alt="nahlad_product" />
                            </a>
                            <div class="add-to-link">
                              <ul>
                                <li>
                                  <a class="quick_view" href="#" data-link-action="quickview" title="Quick view" data-toggle="modal" data-target="#exampleModal">
                                    <i class="lnr lnr-magnifier"></i>
                                  </a>
                                </li>
                                <li>
                                  <a href="wishlist.html" title="Add to Wishlist"><i class="lnr lnr-heart"></i></a>
                                </li>
                                <li>
                                  <a href="compare.html" title="Add to compare"><i class="lnr lnr-sync"></i></a>
                                </li>
                              </ul>
                            </div>
                          </div>
                          <ul class="product-flag">
                            <li class="new">-{{ productInfo.priceInfo.discountTotal|number_format(2, ",", " ") }} %</li>
                          </ul>
                          <div class="product-decs">
                            <a class="inner-link" href="shop-4-column.html"><span>STUDIO DESIGN</span></a>
                            <h2><a href="single-product.html" class="product-link">{{ product.name_lang_1 }}</a></h2>
                            <div class="pricing-meta">
                              <ul>
                                <li class="old-price">{{ productInfo.priceInfo.fullPrice|number_format(2, ",", " ") }} €</li>
                                <li class="current-price">{{ productInfo.priceInfo.salePrice|number_format(2, ",", " ") }} €</li>
                              </ul>
                            </div>
                          </div>
                          <div class="cart-btn">
                            <a
                              href="javascript:void(0)"
                              onclick="BasicThemeCart.addProduct({{ product.id }}, 1);"
                              class="add-to-curt"
                              title="Add to cart">
                              Add to cart</a>
                          </div>
                        </div>
                      </article>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <!--//tabs-->
    <!-- /new_arrivals -->
    {% if show_similar_products %}
      <div class="new_arrivals">
        <h3>Similarly products</h3>
        <div class="row">
          {% for product in productInfo.related %}
            <div class="col-md-3 product">
              <div class="product-shoe-info shoe">
                <div class="men-pro-item">
                  <div class="men-thumb-item">
                    <a href="{{ rootUrl}}/{{ product.url }}" class="thumbnail">
                      <img
                        class="first-img lozad"
                        src="{{ uploadedFileUrl }}/{{ product.image }}"
                        data-src="{{ uploadedFileUrl }}/{{ product.image }}"
                        alt="{{ product["name_lang_"~languageIndex] }}"
                      >
                    </a>
                    <div class="men-cart-pro">
                      <div class="inner-men-cart-pro">
                        <a href="{{ rootUrl}}/{{ product.url }}" class="link-product-add-cart">Quick View</a>
                      </div>
                    </div>
                    {% if product.is_new == 1 %}
                      <span class="product-new-top">{{ translate("new") }}</span>
                    {% endif %}
                    {% if product.is_sale_out == 1 or product.is_on_sale == 1 %}
                      <span class="product-new-top product-sale">{{ translate("sale") }}</span>
                    {% endif %}
                    {% if product.is_recommended == 1 or product.is_top == 1 %}
                      <span class="product-new-top product-recommended">{{ product.is_top == 1 ? translate("top") : translate("recommended") }}</span>
                    {% endif %}
                  </div>
                  <div class="item-info-product">
                    <h4>
                      <a href="{{ rootUrl}}/{{ product.url }}">{{ product["name_lang_"~languageIndex] }} </a>
                    </h4>
                    <div class="info-product-price">
                      <div class="grid_meta">
                        <div class="product_price">
                          <div class="grid-price ">
                            {% if product.price.fullPrice != product.price.salePrice %}
                              <span class="money old-price">{{ product.price.fullPrice|number_format(2, ",", " ") }} €</span><br/>
                              <span class="money">{{ product.price.salePrice|number_format(2, ",", " ") }} €</span>
                            {% else %}
                              <span class="money">{{ product.sale_price|number_format(2, ",", " ") }} €</span>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                      <div class="shoe single-item hvr-outline-out">
                        <a
                          href="javascript:void(0)"
                          onclick="BasicThemeCart.addProduct({{ product.id }}, 1);"
                          class="similar-add-to-cart"
                          title="Add to cart"
                        >
                          <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        </a>

                      </div>
                    </div>
                    <div class="clearfix"></div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- //womens -->
    <div class="clearfix"></div>
  </div>
  <!--//new_arrivals-->
</div>
<!-- //top products -->

