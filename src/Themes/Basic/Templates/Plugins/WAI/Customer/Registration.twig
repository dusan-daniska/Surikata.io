<!-- login area start -->

<div class="ads-grid_shop cart-main-area">
  <div class="shop_inner_inf">
    <div class="login_register">
      <h3 style="border-left: 1px solid var(--theme-third-color);">
        {{ translate("Register") }}
      </h3>
    </div>

    <div class="tab-content">
      <div id="register" class="tab-pane active">
        <div class="login-form-container">
          <div class="login-register-form">

            <div class="row justify-content-center">
              <div class="col-12 col-xs-12 col-md-6 col-lg-3">
                <div id="emailIsEmptyOrInvalidErrorDiv" style="display:none;">
                  <div class="notification mb-5">
                    <p class="error">Email je neuvedený alebo je neplatný.</p>
                  </div>
                </div>
                <div id="accountAlreadyExistsErrorDiv" style="display:none">
                  <div class="notification mb-5">
                    <p class="error">Takýto účet už existuje.</p>
                  </div>
                </div>
                <div id="unknownErrorDiv" style="display:none;">
                  <div class="notification mb-5">
                    <p class="error">Nastala neočakávaná chyba pri vytváraní účtu. Skúste prosím opäť neskôr.</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="row justify-content-center user-account-box">
              <div class="col-12 col-xs-12 col-md-6 col-lg-3">
                <div class="checkout-account-toggle open-toggle2 mb-5" id="loginUser">
                  <form method="post" id="registrationForm">
                    <input class="form-control" type="email" name="email" placeholder="Email *" />
                    <input class="form-control" type="password" name="password" placeholder="Password *" />
                    <input class="form-control" type="password" name="password_2" placeholder="Password *" />
                    <div class="button-box">
                      <div class="login-toggle-btn">
                        <div class="notification">
                          <p id="privacyPolicyTermsErrorDiv">
                            <input type="checkbox" name="checkbox" id="privacyPolicyTermsConfirmation"/>
                            <label for="privacyPolicyTermsConfirmation">{{ translate("Súhlasím so spracovávaním osobných údajov.") }}</label>
                          </p>
                        </div>
                        <p id="privacyPolicyTermsErrorText" class="mt-2" style="color:#db2f23;display:none">
                          Musíte súhlasiť s podmienkami spracovania osobných údajov.
                        </p>
                      </div>
                    </div>
                  </form>

                  <div class="button-box">
                    <div class="register-toggle-btn">
                      <button onclick="ThemeBasicCustomer.createAccount();">
                        <span>{{ translate("Register") }}</span>
                      </button>
                      {% if showPrivacyTerms and privacyTermsUrl != "" %}
                        <a href="{{ rootUrl }}/{{ privacyTermsUrl }}" target="_blank">
                          {{ translate("Show conditions") }}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
<!-- login area end -->