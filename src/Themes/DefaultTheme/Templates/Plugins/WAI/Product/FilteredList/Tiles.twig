<div class="best-sell-area">
  <div class="col-md-12">
    <div class="section-title">
      <h2>
        {% if filterType == 'discounted' %}
          Discounted products
        {% elseif filterType == 'news' %}
          New products
        {% elseif filterType == 'top' %}
          Top products
        {% elseif filterType == 'recommended' %}
          Recommended products
        {% endif %}
      </h2>
    </div>
  </div>
  <div class="best-sell-area-wrapper slider-nav-style-1 slider-nav-style-4">
    {% for product in products %}
      {% if 
        (filterType == 'discounted' and product.is_on_sale == 1) 
        or
        (filterType == 'news' and product.is_new == 1) 
        or
        (filterType == 'top' and product.is_top == 1)
        or
        (filterType == 'recommended' and product.is_recommended == 1)  
      %}
        <div class="single-slider-item">
          <article class="list-product text-center">
            <div class="product-inner">
              <div class="img-block">
                <a href="{{ rootUrl }}/{{ product.url }}" class="thumbnail">
                  <img class="first-img" src="{{ uploadedFileUrl }}/{{ product.image }}" alt="" />
                </a>
                <div class="add-to-link">
                  <ul>
                    <li>
                      <a class="quick_view" href="#" data-link-action="quickview" title="Quick view" data-toggle="modal" data-target="#exampleModal">
                        <i class="lnr lnr-magnifier"></i>
                      </a>
                    </li>
                    <li>
                      <a href="wishlist.html" title="Add to Wishlist"><i class="lnr lnr-heart"></i></a>
                    </li>
                    <li>
                      <a href="compare.html" title="Add to compare"><i class="lnr lnr-sync"></i></a>
                    </li>
                  </ul>
                </div>
              </div>
              <ul class="product-flag">
                <li class="new">
                  {% if filterType == 'discounted' %}
                    <span>- {{ product.price.discountTotal|number_format(2, ",", " ") }}%</span>
                  {% elseif filterType == 'news' %}
                    <span>NEW</span>
                  {% elseif filterType == 'top' %}
                    <span style="color: red">TOP</span>
                  {% endif %}
                </li>
              </ul>
              <div class="product-decs">
                <a class="inner-link" href="shop-4-column.html"><span>{{ product.ProductCategory.name_lang_1 }}</span></a>
                <h2><a href="{{ rootUrl }}/{{ product.url }}" class="product-link">{{ product.name_lang_1 }}</a></h2>
                <div class="availability-list in-stock">Availability: <span>300 In Stock</span></div>
                <p>Galileo, and QZSS, Barometric Altimeter, Optical Heart Sensor, Accelerometer And Gyroscope, Ion-X Strengthened Glass</p>
                <div class="pricing-meta">
                  <ul>
                    <li class="old-price">{{ product.price.fullPrice|number_format(2, ",", " ") }} €</li>
                    <li class="current-price">{{ product.price.salePrice|number_format(2, ",", " ") }} €</li>
                  </ul>
                </div>
              </div>
            </div>
          </article>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>