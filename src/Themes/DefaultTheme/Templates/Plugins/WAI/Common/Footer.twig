<!-- News letter area -->
<div class="news-letter-area">
  {% if Newsletter %}
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-4 mb-md-30px mb-lm-30px">
          <div class="title-newsletter">
            <h2>Sign Up For Newsletters</h2>
            <p class="des">Be the First to Know. Sign up for newsletter today !</p>
          </div>
        </div>
        <div class="col-md-12 col-lg-8">
          <div id="mc_embed_signup" class="subscribe-form">
            <form
                id="mc-embedded-subscribe-form"
                class="validate"
                novalidate=""
                target="_blank"
                name="mc-embedded-subscribe-form"
                method="post"
                action=""
            >
              <div id="mc_embed_signup_scroll" class="mc-form">
                <input class="email" type="email" required="" placeholder="Enter your email here.." name="EMAIL" value="" />
                <div class="mc-news" aria-hidden="true">
                    <input type="text" value="" tabindex="-1" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" />
                </div>
                <div class="clear">
                  <input id="mc-embedded-subscribe" class="button" type="submit" name="subscribe" value="Sign Up" />
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
</div>
<!-- News letter area  End -->

<!-- Footer Area Start --> 
<div class="footer-area">
  <div class="footer-container">
    <div class="footer-top">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="single-wedge">
              <div class="footer-logo text-medium">
                <a href="{{ rootUrl }}"><img class="img-responsive" src="{{ rootUrl }}./upload/{{ settings.profile.logo }}" alt="logo.jpg" /></a>
                <p class="mt-3">{{ settings.profile.storeName }}</p>
                <p class="text-infor">{{ settings.profile.slogan }}</p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="single-wedge">
              {% if contactTitle %}
                <p class="text-medium mb-3">{{ contactTitle }}</p>
              {% endif %}
              <div class="need_help">
                <p class="add">
                  {% if showContactAddress %}
                    <span class="address">Address:</span> 
                    {{ settings.profile.sidlo_ulica_1 }} {{ settings.profile.sidlo_ulica_2 }}
                    {{ settings.profile.sidlo_psc }} {{ settings.profile.sidlo_mesto }}
                  {% endif %}
                </p>
                {% if showContactEmail %}
                  <p class="mail"><span class="email">Email:</span> <a href="">{{ settings.profile.contactEmail }}</a></p>
                {% endif %}
                {% if showContactPhoneNumber %}
                  <p class="phone"><span class="call us">Phone:</span> <a href="">{{ settings.profile.contactPhoneNumber }}</a></p>
                {% endif %}
              </div>
            </div>
          </div>
          {% if showMainMenu %}
            <div class="col">
              <div class="single-wedge">
                <p class="text-medium mb-3">{{ mainMenuTitle }}</p>
                  <div class="footer-links">
                    <ul>
                      {% for menuItem in mainMenuItems %}
                        <li><a href="{{ rootUrl }}/{{ menuItem.url }}">{{ menuItem.text }}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
              </div>
            </div>
          {% endif %}
          {% if showSecondaryMenu %}
            <div class="col">
              <div class="single-wedge">
                <p class="text-medium mb-3">{{ secondaryMenuTitle }}</p>
                <div class="footer-links">
                  <ul>
                    {% for menuItem in secondaryMenuItems %}
                      <li><a href="{{ rootUrl }}/{{ menuItem.url }}">{{ menuItem.text }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          {% endif %}
          {% if showBlogs %}
            <div class="col-lg-4 col-sm-12">
              <div class="single-wedge">
                <p class="text-medium mb-3">{{ blogsTitle }}</p>
                <div class="footer-blog-slider">
                  <div class="footer-blog-slider-wrapper slider-nav-style-3 ">
                    <!-- Single-item -->
                    {% for blog in blogs %}
                      {% if loop.index % 2 != 0 %}
                        <div class="single-slider-item">
                      {% endif %}
                      <div class="footer-blog-post d-flex mb-30px">
                        <div class="footer-blog-post-top">
                          <div class="post-thumbnail">
                            <a href="{{ rootUrl }}/{{ blog.url }}">
                              <img src="{{ uploadedFileUrl }}/{{ blog.image }}" alt="{{ blog.name }}">
                            </a>
                          </div>
                        </div>
                        <div class="footer-blog-content">
                          <p class="text-medium-2"><a href="{{ blog.url }}">{{ blog.name }}</a></p>
                          <div class="footer-blog-meta">
                            <span class="autor">Posted by {{ blog.USER.name }}</span>
                            <span class="date">{{ blog.created_at|date(locale.dateFormat) }}</span>
                          </div>
                        </div>
                      </div>
                      {% if loop.index % 2 == 0 %}
                        </div>
                      {% endif %}
                    {% endfor %}
                    <!-- Single-item -->
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="footer-center">
      <div class="container">
        <div class="row text-center">
          {% if showPayments %}
            <div class="col">
              <div class="footer-paymet-warp">
                <div class="payment-way">
                  <img src="{{ rootUrl }}/theme/assets/images/icons/payment.png" alt="payments" />
                </div>
              </div>
            </div>
          {% endif %}
          {% if showSocialMedia %}
            <div class="col">
              <div class="footer-social-icon" style="float:none">
                <div class="social-icon">
                  <ul>
                    {% if settings.profile.urlFacebook != "" %}
                      <li class="facebook"><a href="{{ settings.profile.urlFacebook }}"><i class="ion-social-facebook"></i></a></li>
                    {% endif %}
                    {% if settings.profile.urlTwitter != "" %}
                      <li class="twitter"><a href="{{ settings.profile.urlTwitter }}"><i class="ion-social-twitter"></i></a></li>
                    {% endif %}
                    {% if settings.profile.urlYouTube != "" %}
                      <li class="google"><a href="{{ settings.profile.urlYouTube }}"><i class="ion-social-youtube-outline"></i></a></li>
                    {% endif %}
                    {% if settings.profile.urlInstagram != "" %}
                      <li class="instagram"><a href="{{ settings.profile.urlInstagram }}"><i class="ion-social-instagram-outline"></i></a></li>
                    {% endif %}
                  </ul>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="footer-tags">
      <div class="container">
        <div class="row"> 
          <div class="col-md-12 text-center">
            <p class="copy-text">Copyright Â© <a href=""> {{ currentYear }} {{ settings.profile.storeName }}</a>. All Rights Reserved</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Footer Area End -->
