<div class='container'>
  {% if status == "OK" %}
    <div class="notification mb-5">
      <p class="success">
        Your account has been successfully verified.
      </p>
    </div>
    <p>
      Now you can sing in here
      <a
        href="{{ rootUrl }}/{{ callPluginMethod('WAI/Customer/Login', 'getWebPageUrl') }}"
        >Login</a>
    </p>
  {% else %}
    <div class="notification mb-5">
      <p class="error">
        {{ error }}
      </p>
    </div>
  {% endif %}
</div>