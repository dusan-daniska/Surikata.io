<!-- Shop details Area start -->
<section class="blank-page-area mtb-50px">
  <div class="container">
    <div class="row">

      {% for key, result in results %}
        {% set data = result.data %}
        {% if result.model == "Product" %}
          {% set product = data %}
          <div class="shop-list-wrap mb-30px scroll-zoom">
            <div class="slider-single-item">
              <div class="row list-product m-0px">
                <div class="col-md-12 padding-0px product-inner">
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-3 p-0">
                      <div class="left-img">
                        <div class="img-block pl-lg-3 pr-lg-3">
                          <a href="{{ rootUrl }}/{{ product.url }}" class="thumbnail">
                            <img class="first-img" src="{{ uploadedFileUrl }}/{{ product.image }}" alt="{{ product.image }}" />
                          </a>
                          <ul class="product-flag">
                            {% if (product.price.fullPrice != product.price.salePrice) %}
                              <li class="new">-{{ product.price.discount|number_format(2, ",", " ") }}%</li>
                            {% endif %}
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-9 p-0">
                      <div class="product-desc-wrap">
                        <div class="product-decs" style="min-height: auto;">
                          <h2><a href="{{ rootUrl }}/{{ product.url }}" class="product-link">{{ product.TRANSLATIONS.name }}</a></h2>
                          <a class="inner-link" href="shop-4-column.html"><span>{{ product.ProductCategory.TRANSLATIONS.name }}</span></a>
                          <div class="product-intro-info">
                            <p>{{ product.TRANSLATIONS.brief }}</p>
                          </div>
                        </div>
                        <div class="box-inner d-flex">
                          <div class="align-self-center">
                            <div class="pricing-meta">
                              <ul>
                                <li class="old-price">{{ product.price.fullPrice|number_format(2, ",", " ") }} €</li>
                                <li class="current-price">{{ product.price.salePrice|number_format(2, ",", " ") }} €</li>
                              </ul>
                            </div>
                            <div class="cart-btn">
                              <a
                                  href="javascript:void(0)"
                                  onclick="AbeloThemeCart.addProduct({{ product.id }}, 1);"
                                  class="add-to-curt"
                                  title="Add to cart">{{ translate("Add to cart", "Misc") }}
                              </a>
                            </div>
                            <!--<div class="add-to-link">
                              <ul>
                              <li>
                                <a class="quick_view" href="#" data-link-action="quickview" title="Quick view" data-toggle="modal" data-target="#exampleModal">
                                <i class="lnr lnr-magnifier"></i>
                                </a>
                              </li>
                              <li>
                                <a href="wishlist.html" title="Add to Wishlist"><i class="lnr lnr-heart"></i></a>
                              </li>
                              <li>
                                <a href="compare.html" title="Add to compare"><i class="lnr lnr-sync"></i></a>
                              </li>
                              </ul>
                            </div>-->
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        {% endif %}
        {% if result.model == "ProductCategory" %}
          {% set category = data %}
          {% set url = category.additional_info.category.url %}
          <div class="shop-list-wrap mb-30px scroll-zoom">
            <div class="slider-single-item">
              <div class="row list-product m-0px">
                <div class="col-md-12 padding-0px product-inner">
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-2 p-0">
                      <div class="left-img">
                        <div class="img-block pl-lg-3 pr-lg-3">
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 p-0">
                      <div class="product-desc-wrap">
                        <div class="product-decs" style="min-height: auto;">
                          <h2><a href="{{ rootUrl }}/{{ url }}" class="product-link">{{ category.TRANSLATIONS.name }}</a></h2>
                          <a class="inner-link" href="shop-4-column.html"><span>{{ category.ProductCategory.TRANSLATIONS.name }}</span></a>
                          <div class="product-intro-info">
                            <p>{{ translate("Number of products in category", "Misc") }}: {{ category.additional_info.productCount }}</p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 p-0">
                      {% if category.additional_info.products|length > 0 %}
                        <div class="row">
                        {% for product in category.additional_info.products|slice(0, 3) %}
                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-3 p-0">
                              <div class="left-img">
                                <div class="img-block pl-lg-3 pr-lg-3">
                                  <a href="{{ rootUrl }}/{{ url }}" class="thumbnail">
                                    <img class="first-img" src="{{ uploadedFileUrl }}/{{ product.image }}" alt="{{ product.TRANSLATIONS.name }}" />
                                  </a>
                                </div>
                              </div>
                              <div class="search-item-category-product">
                                {{ product.TRANSLATIONS.name }}
                              </div>
                            </div>
                        {% endfor %}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        {% endif %}
        {% if result.model == "Blog" %}
          {% set blog = data %}
          <div class="shop-list-wrap mb-30px scroll-zoom">
            <div class="slider-single-item">
              <div class="row list-product m-0px">
                <div class="col-md-12 padding-0px product-inner">
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 p-0">
                      <div class="left-img">
                        <div class="img-block pl-lg-3 pr-lg-3">
                          <a href="{{ rootUrl }}/{{ blogCatalogUrl }}/{{ blog.date }}" class="thumbnail">
                            <img class="first-img" src="{{ uploadedFileUrl }}/{{ blog.image }}" alt="{{ blog.image }}" />
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 p-0">
                      <div class="product-desc-wrap">
                        <div class="product-decs" style="min-height: auto;">
                          <h2><a href="{{ rootUrl }}/{{ blog.url }}" class="product-link">{{ blog.name }}</a></h2>

                          <div class="product-intro-info">
                            <p>{{ blog.content|slice(0, 250)|raw }}</p>
                          </div>
                        </div>
                        <div class="box-inner d-flex">
                          <div class="align-self-center">
                            <div class="pricing-meta">
                              <ul>
                                <li><a href="{{ rootUrl }}/{{ blogCatalogUrl }}/{{ blog.date }}"><i class="ion-calendar"></i> {{ blog.created_at }}</a></li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        {% endif %}

        {% if result.model == "WebPage" %}
          {% set page = data %}
          <div class="shop-list-wrap mb-30px scroll-zoom">
            <div class="slider-single-item">
              <div class="row list-product m-0px">
                <div class="col-md-12 padding-0px product-inner">
                  <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-2 p-0">
                      <div class="left-img">
                        <div class="img-block pl-lg-3 pr-lg-3">
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 p-0">
                      <div class="product-desc-wrap">
                        <div class="product-decs" style="min-height: auto;">
                          <h2><a href="{{ rootUrl }}/{{ url }}" class="product-link">{{ page.TRANSLATIONS.name }}</a></h2>
                          <a class="inner-link" href="shop-4-column.html"><span>{{ page.ProductCategory.TRANSLATIONS.name }}</span></a>
                          <div class="product-intro-info">
                            <p>{{ translate("Number of products in category", "Misc") }}: {{ page.additional_info.productCount }}</p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 p-0">
                      {% if page.additional_info.products|length > 0 %}
                        <div class="row">

                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        {% endif %}

        {% if result.model == "Divider" %}
          <div class="col-md-12">
            <div class="section-title">
              <h2> {{ result.data }} <span style="font-size: 12px;color: #999;vertical-align: middle;display: inline-block;padding-bottom: 2px;padding-left: 15px;">({{ result.count }})</span> </h2>
            </div>
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>