<!-- News letter area -->
<div class="news-letter-area">
  {% if Newsletter %}
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-4 mb-md-30px mb-lm-30px">
          <div class="title-newsletter">
            <h2>{{ translate("Sign Up For Newsletters", "Common") }}</h2>
            <p class="des">{{ translate("Be the First to Know. Sign up for newsletter today !", "Common") }}</p>
          </div>
        </div>
        <div class="col-md-12 col-lg-8">
          <div id="mc_embed_signup" class="subscribe-form">
            <form
                id="subscribeForm"
                class="validate"
                novalidate=""
                target="_blank"
                name="mc-embedded-subscribe-form"
                method="post"
                action=""
                onsubmit="return false;"
            >
              <div id="mc_embed_signup_scroll" class="mc-form">
                <input
                  class="email"
                  type="email"
                  required=""
                  onblur="validateEmail(this, 'subscribeForm')"
                  placeholder="{{ translate("Enter your email here", "Common") }}"
                  name="newsletterEmail" value=""
                />
                <div class="clear">
                  <button
                    onclick="subscribeNewsletter('subscribeForm')"
                    id="mc-embedded-subscribe"
                    class="button"
                    type="button"
                    name="subscribe"
                    value=""
                  >{{ translate("Sign Up", "Common") }}</button>
                </div>
              </div>
            </form>
            <script>
              var unknownNewsletterError = '{{ translate("Unknown error", "CRM") }}';
              var alreadyRegisteredNewsletter = '{{ translate("Email is already registered", "CRM") }}';
              var emailIsInvalidNewsletter = '{{ translate("Email is invalid", "CRM") }}';
            </script>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
</div>
<!-- News letter area  End -->

<!-- Footer Area Start --> 
<div class="footer-area">
  <div class="footer-container">
