                <p class="text-medium mb-3">{{ secondaryMenuTitle }}</p>
                <div class="footer-links">
                  <ul>
                    {% for menuItem in secondaryMenuItems %}
                      <li><a href="{{ rootUrl }}/{{ menuItem.url }}">{{ menuItem.text }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          {% endif %}
          {% if showBlogs %}
            <div class="col-lg-12 col-sm-12">
              <div class="single-wedge">
                <p class="text-medium mb-3">{{ blogsTitle }}</p>
                <div class="footer-blog-slider">
                  <div class="footer-blog-slider-wrapper slider-nav-style-3 ">
                    <!-- Single-item -->
                    {% for blog in blogs %}
                      {% if loop.index <= 2 %}
                        {% if loop.index % 2 != 0 %}
                          <div class="single-slider-item">
                        {% endif %}
                        <div class="footer-blog-post d-flex mb-30px">
                          <div class="footer-blog-post-top">
                            <div class="post-thumbnail">
                              <a href="{{ rootUrl }}/{{ blog.url }}">
                                <img src="{{ uploadedFileUrl }}/{{ blog.image }}" alt="{{ blog.name }}">
                              </a>
                            </div>
                          </div>
                          <div class="footer-blog-content">
                            <p class="text-medium-2"><a href="{{ blog.url }}">{{ blog.name }}</a></p>
                            <div class="footer-blog-meta">
                              <span class="autor">{{ translate("Posted by", "Common") }} {{ blog.USER.name }}</span>
                              <span class="date">{{ blog.created_at|date(locale.dateFormat) }}</span>
                            </div>
                          </div>
                        </div>
                        {% if loop.index % 2 == 0 %}
                          </div>
                        {% endif %}
                      {% endif %}
                    {% endfor %}
                    <!-- Single-item -->
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="footer-center">
      <div class="container">
        <div class="row text-center">
          {% if showPayments %}
            <div class="col-12 col-md-6">
              <div class="footer-paymet-warp">
                <div class="payment-way">
                  <img src="{{ rootUrl }}/theme/assets/images/icons/payment.png" alt="payments" />
                </div>
              </div>
            </div>
          {% endif %}
          {% if showSocialMedia %}
            <div class="col-12 col-md-6">
              <div class="footer-social-icon" style="float:none">
                <div class="social-icon">
                  <ul>
                    {% if settings.companyInfo.urlFacebook != "" %}
                      <li class="facebook"><a href="{{ settings.companyInfo.urlFacebook }}"><i class="ion-social-facebook"></i></a></li>
                    {% endif %}
                    {% if settings.companyInfo.urlTwitter != "" %}
                      <li class="twitter"><a href="{{ settings.companyInfo.urlTwitter }}"><i class="ion-social-twitter"></i></a></li>
                    {% endif %}
                    {% if settings.companyInfo.urlYouTube != "" %}
                      <li class="google"><a href="{{ settings.companyInfo.urlYouTube }}"><i class="ion-social-youtube-outline"></i></a></li>
                    {% endif %}
                    {% if settings.companyInfo.urlInstagram != "" %}
                      <li class="instagram"><a href="{{ settings.companyInfo.urlInstagram }}"><i class="ion-social-instagram-outline"></i></a></li>
                    {% endif %}
                  </ul>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="footer-tags">
      <div class="container">
        <div class="row"> 
          <div class="col-md-12 text-center">
            <p class="copy-text">{{ translate("Copyright Â©") }} <a href=""> {{ currentYear }} {{ settings.companyInfo.storeName }}</a>. {{ translate("All Rights Reserved", "Common") }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
