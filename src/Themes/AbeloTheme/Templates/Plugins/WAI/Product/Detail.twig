 <!-- Shop details Area start -->
<section class="product-details-area">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="product-details-img product-details-tab">
          <div class="zoompro-wrap zoompro-2">
            <div class="zoompro-border zoompro-span">
              <img class="zoompro" src="{{ uploadedFileUrl }}/{{ productInfo["image"] }}" data-zoom-image="{{ uploadedFileUrl }}/{{ productInfo["image"] }}" alt="{{ productInfo.TRANSLATIONS.name }}" />
            </div>
            {% for imgKey, image in productInfo["gallery"] %}
              <div class="zoompro-border zoompro-span">
                <img class="zoompro" src="{{ uploadedFileUrl }}/{{ image["image"] }}" data-zoom-image="{{ uploadedFileUrl }}/{{ image["image"] }}" alt="{{ productInfo.TRANSLATIONS.name }}" />
              </div>
            {% endfor %}
          </div>
          <div id="gallery" class="product-dec-slider-2">
            <div class="single-slide-item">
              <img class="img-responsive" data-image="{{ uploadedFileUrl }}/{{ productInfo["image"] }}" data-zoom-image="{{ uploadedFileUrl }}/{{ productInfo["image"] }}" src="{{ uploadedFileUrl }}/{{ productInfo["image"] }}" alt="{{ productInfo.TRANSLATIONS.name }}" />
            </div>
            {% for imgKey, image in productInfo["gallery"] %}
              <div class="single-slide-item">
                <img class="img-responsive" data-image="{{ uploadedFileUrl }}/{{ image["image"] }}" data-zoom-image="{{ uploadedFileUrl }}/{{ image["image"] }}" src="{{ uploadedFileUrl }}/{{ image["image"] }}" alt="{{ productInfo.TRANSLATIONS.name }}" />
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="product-details-content">

          <div class="product-label-group" style="flex-direction: row;">
            {% if productInfo.is_new == 1 %}
              <label class="product-label label-new" style="margin-right: 5px;">{{ translate("New", "Product") }}</label>
            {% endif %}
            {% if productInfo.is_sale_out == 1 %}
              <label class="product-label label-sale" style="margin-right: 5px;">{{ translate("Sale", "Product") }}</label>
            {% endif %}
            {% if productInfo.is_on_sale == 1 %}
              <label class="product-label label-stock" style="margin-right: 5px;">{{ translate("Action", "Product") }}</label>
            {% endif %}
            {% if productInfo.is_recommended == 1 or productInfo.is_top == 1 %}
              <label class="product-label label-top" style="margin-right: 5px;">{{ productInfo.is_top == 1 ? translate("Top", "Product") : translate("Recommended", "Product") }}</label>
            {% endif %}
          </div>

          <h2>{{ productInfo.TRANSLATIONS.name }}</h2>
          <div class="pro-details-rating-wrap">
            {# Rating of the product (number of stars) #}
            {# Využije sa pre brand #}
            {{ productInfo.brand.name }}
          </div>
          <div class="pricing-meta">
            <ul>
              {% if productInfo.priceInfo.fullPrice > 0 %}
                <li class="old-price">€ {{ productInfo.priceInfo.fullPrice|number_format(2, ",", " ") }}</li>
              {% endif %}
              <li class="cuttent-price">{{ productInfo.priceInfo.salePrice|number_format(2, ",", " ") }} €</li>
              {% if productInfo.priceInfo.discountTotal > 0 %}
                <li class="discount-flag">- {{ productInfo.priceInfo.discountTotal|number_format(2, ",", " ") }} %</li>
              {% endif %}
            </ul>
          </div>
          <div class="pro-details-list">
            <p>{{ productInfo.TRANSLATIONS.brief|raw }}</p>
          </div>
          <div class="pro-details-quality mt-0px">
            <div class="cart-plus-minus">
              <input class="cart-plus-minus-box" type="text" name="qtybutton" value="1" />
            </div>
            <div class="quantity-unit">{{ productInfo.DELIVERY_UNIT.unit }}</div>
            <div class="pro-details-cart btn-hover">
              <a 
                href="javascript:void(0)"
                onclick="
                  AbeloThemeCart.addProduct(
                    {{ productInfo.id }},
                    $('.cart-plus-minus > input[name=qtybutton]').val(),
                    function(data) {
                      AbeloThemePopup
                        .setImage('{{ uploadedFileUrl }}/{{ productInfo.image }}')
                        .setTitle($('.pr_detail .product_title a').text())
                        .setSubTitle('{{ translate("The product has been added to the cart.", "Product") }}')
                        .setConfirmButtonText('{{ translate("Go to order", "Product") }}')
                        .setConfirmButtonOnclick(function() {
                          window.location.href = '{{ rootUrl }}/{{ callPluginMethod('WAI/Order/CartOverview', 'getWebPageUrl') }}';
                          return false;
                        })
                        .setCancelButtonText('{{ translate("Continue shopping", "Product") }}')
                        .show()
                      ;
                    }
                  );
                "
              >  {{ translate("Add To Cart", "Product") }}</a>
            </div>
          </div>
          <!--<div class="pro-details-wish-com">
            <div class="pro-details-wishlist">
              <a href="#"><i class="ion-android-favorite-outline"></i>Add to wishlist</a>
            </div>
            <div class="pro-details-compare">
              <a href="#"><i class="ion-ios-shuffle-strong"></i>Add to compare</a>
            </div>
          </div>-->
          <!--<div class="pro-details-social-info">
            <span>Share</span>
            <div class="social-info">
              <ul>
                <li>
                  <a title="Facebook" href="#"><i class="ion-social-facebook"></i></a>
                </li>
                <li>
                  <a title="Twitter" href="#"><i class="ion-social-twitter"></i></a>
                </li>
                <li>
                  <a title="Google+" href="#"><i class="ion-social-google"></i></a>
                </li>
                <li>
                  <a title="Instagram" href="#"><i class="ion-social-instagram"></i></a>
                </li>
              </ul>
            </div>
          </div>-->
          <div class="pro-details-policy">
            <ul>
              {% for service in productInfo.SERVICES %}
                <li>
                  <div class="row">
                    <div class="col-2">
                      <i class="fa fa-{{ service.pictogram }}"></i>
                    </div>
                    <div class="col-10">
                      <span>{{ service["name_lang_"~languageIndex] }}</span>
                    </div>
                  </div>
                </li>
              {% endfor %}

            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Shop details Area End -->
<!-- product details description area start -->
<div class="description-review-area mt-5 bg-light-gray-3 ptb-50px">
