                          <input placeholder="{{ translate("Email", "Product") }}" type="email" />
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="rating-form-style form-submit">
                          <textarea name="Your Review" placeholder="{{ translate("Message", "Product") }}"></textarea>
                          <input type="submit" value="{{ translate("Submit", "Product") }}" />
                        </div>
                      </div>
