{% if show_accessories %}
  <div class="arrival-area mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="section-title">
            <h2>{{ translate("Accessories", "Product") }}</h2>
          </div>
        </div>
      </div>
      <!-- tab content -->
      <div class="tab-content">
        <!-- First-Tab -->
        <div id="tab-1" class="tab-pane active fade">
          <!-- Arrivel slider start -->
          <div class="arrival-slider-wrapper slider-nav-style-1">
            {% for product in productInfo.accessories %}
              <div class="slider-single-item">
                <article class="list-product text-center">
                  <div class="product-inner">
                    <div class="img-block">
                      <a href="{{ rootUrl}}/{{ product.url }}" class="thumbnail">
                        <img class="first-img" src="{{ uploadedFileUrl }}/{{ product["image"] }}" alt="{{ product.TRANSLATIONS.name }}" />
                      </a>
                      <div class="add-to-link">
                        <ul>
                          <li>
                            <a class="quick_view" href="{{ rootUrl}}/{{ product.url }}" data-link-action="quickview" title="{{ translate("Quick view", "Product") }}" data-toggle="modal" data-target="#exampleModal">
                              <i class="lnr lnr-magnifier"></i>
                            </a>
                          </li>
                        </ul>
                      </div>
                    </div>
                    <ul class="product-flag">
                      {% if product.priceInfo.discountTotal != 0 %}
                        <li class="tag new">-{{ product.priceInfo.discountTotal|number_format(2, ",", " ") }} %</li>
                      {% endif %}
                      {% if product.is_new == 1 %}
                        <li class="tag new">{{ translate("New", "Product") }}</li>
                      {% endif %}
                      {% if product.is_sale_out == 1 %}
                        <li class="tag sale">{{ translate("Sale", "Product") }}</li>
                      {% endif %}
                      {% if product.is_on_sale == 1 %}
                        <li class="tag action">{{ translate("Action", "Product") }}</li>
                      {% endif %}
                      {% if product.is_recommended == 1 or product.is_top == 1 %}
                        <li class="tag sale">{{ product.is_top == 1 ? translate("Top", "Product") : translate("Recommended", "Product") }}</li>
                      {% endif %}
                    </ul>
                    <div class="product-decs">
                      <a class="inner-link" href="shop-4-column.html"><span>{{ translate("STUDIO DESIGN", "Product") }}</span></a>
                      <h2><a href="single-product.html" class="product-link">{{ product.TRANSLATIONS.name }}</a></h2>
                      <div class="pricing-meta">
                        <ul>
                          <li class="old-price">{{ product.sale_price|number_format(2, ",", " ") }} €</li>
                          <li class="current-price">{{ product.sale_price|number_format(2, ",", " ") }} €</li>
                        </ul>
                      </div>
                    </div>
                    <div class="cart-btn">
                      <a 
                        href="javascript:void(0)"
                        onclick="AbeloThemeCart.addProduct({{ product.id }}, 1);" 
                        class="add-to-curt" 
                        title="{{ translate("Add to cart", "Product") }}">
                      {{ translate("Add to cart", "Product") }}</a>
                    </div>
                  </div>
                </article>
              </div>
            {% endfor %}
          </div> 
          <!-- Arrivel slider end -->
        </div>
        <!-- First-Tab -->
      </div>
      <!-- tab content end-->
    </div>
  </div>
{% endif %}

