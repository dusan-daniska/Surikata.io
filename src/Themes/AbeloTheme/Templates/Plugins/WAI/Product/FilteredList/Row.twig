 <div class="arrival-area mt-20px mt-lg-50px">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h2>	
						{% if filterType == 'on_sale' %}
							Discounted products
						{% elseif filterType == 'news' %}
							{{ translate("New products", "Product") }}
						{% elseif filterType == 'top' %}
							{{ translate("Top products", "Product") }}
						{% elseif filterType == 'recommended' %}
							{{ translate("Recommended products", "Product") }}
						{% endif %}
					</h2>
					<!-- Nav tabs -->
					<!--<ul class="nav nav-tabs sub-category">
						<li class="nav-item">
							<a class="nav-link active" data-toggle="tab" href="#tab-1">Home Audio</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" data-toggle="tab" href="#tab-2">Headphones</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" data-toggle="tab" href="#tab-3">Cameras</a>
						</li>
					</ul>-->
					<!-- Nav tabs -->
				</div>
			</div>
		</div>
		<!-- tab content -->
		<div class="tab-content hot-deal-area">
			<!-- First-Tab -->
			<div id="tab-1" class="tab-pane active fade">
				<!-- Arrivel slider start -->
				{% if layout == "row" %} 
					<div class="arrival-slider-wrapper slider-nav-style-1"> 
				{% else %} 
					<div class="hot-deal-slider-wrapper-2 slider-nav-style-1">
				{% endif %}
					{% for product in products %}
						{% if 
							(filterType == 'on_sale' and product.is_on_sale == 1) 
							or
							(filterType == 'news' and product.is_new == 1) 
							or
							(filterType == 'top' and product.is_top == 1)
							or
							(filterType == 'recommended' and product.is_recommended == 1)  
						%}
							<div class="slider-single-item">
								<!-- Single Item -->
								<article class="list-product text-center">
									<div class="product-inner">
											<div class="img-block">
												<a href="{{ rootUrl }}/{{ product.url }}" class="thumbnail">
													<img class="first-img" src="{{ uploadedFileUrl }}/{{ product.image }}" alt="" />
												</a>
												<div class="add-to-link">
													<ul>
														<li>
															<a class="quick_view" href="#" data-link-action="quickview" title="{{ translate("Quick view", "Product") }}" data-toggle="modal" data-target="#exampleModal">
																<i class="lnr lnr-magnifier"></i>
															</a>
														</li>
														<li>
															<a href="wishlist.html" title="{{ translate("Add to Wishlist", "Product") }}"><i class="lnr lnr-heart"></i></a>
														</li>
														<li>
															<a href="compare.html" title="{{ translate("Add to compare", "Product") }}"><i class="lnr lnr-sync"></i></a>
														</li>
													</ul>
												</div>
											</div>
											<ul class="product-flag">
												<li class="new">
													{% if filterType == 'on_sale' %}
														<span>- {{ product.price.discountTotal|number_format(2, ",", " ") }}%</span>
													{% elseif filterType == 'news' %}
														<span>{{ translate("New", "Product") }}</span>
													{% elseif filterType == 'top' %}
														<span style="color: red">{{ translate("Top", "Product") }}</span>
													{% endif %}
												</li>
											</ul>
											<div class="product-decs">
												{% if filterType == 'on_sale' and product.is_on_sale == 1 %}
													<div class="clockdiv">
														<div data-countdown="2021/06/12"></div>
													</div>
												{% endif %}
												<a class="inner-link" href="shop-4-column.html"><span>{{ product.ProductCategory.name_lang_1 }}</span></a>
												<h2><a href="{{ rootUrl }}/{{ product.url }}" class="product-link">{{ product.name_lang_1 }}</a></h2>
												<div class="pricing-meta">
													<ul>
														<li class="old-price">{{ product.price.fullPrice|number_format(2, ",", " ") }} €</li>
														<li class="current-price">{{ product.price.salePrice|number_format(2, ",", " ") }} €</li>
													</ul>
												</div>
											</div>
											<div class="cart-btn">
												<a 
													href="javascript:void(0)"
													onclick="AbeloThemeCart.addProduct({{ product.id }}, 1);" 
													class="add-to-curt" 
													title="{{ translate("Add to cart", "Product") }}">
												{{ translate("Add to cart", "Product") }}</a>
											</div>
									</div>
								</article>
								<!-- Single Item -->
							</div>
						{% endif %}
					{% endfor %}
				</div>
				<!-- Arrivel slider end -->
			</div>
		</div>
			<!-- tab content end-->
	</div>
</div>