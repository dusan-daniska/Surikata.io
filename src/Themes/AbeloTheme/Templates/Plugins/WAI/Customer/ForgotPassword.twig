 <!-- login area start -->
  <div class="login-register-area mb-50px mt-40px">
    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-md-12 ml-auto mr-auto">
          <div class="login-register-wrapper">
            <div class="login-register-tab-list nav">
              <a class="active" data-toggle="tab" href="#lg1">
                <h4>Zabudnuté heslo</h4>
              </a>
            </div>
            <div class="tab-content">
              <div id="lg1" class="tab-pane active">
                <div class="login-form-container">
                  <div class="login-register-form">
                    {% if user.changePasswordError %}
                      <div class="notification mb-3">
                        <p class="error">{{ user.changePasswordError }}</p>
                      </div>
                    {% endif %}
                    {% if status == "OK" %}
                      <form method="post" id="forgotPasswordForm">
                        <input type="hidden" name="forgotPassword" value="1" />
                        <input type="password" 
                          name="password" 
                          placeholder="New Password"
                          {% if user.changePasswordError %} class="required-empty" {% endif %} 
                          required 
                          />
                        <div class="button-box">
                          <div class="login-toggle-btn">
                            <button 
                              type="submit"
                              onclick="$('#forgotPasswordForm').submit();"
                            ><span>Change password</span></button>
                          </div>
                        </div>
                      </form>
                    {% else %}
                      <div id='unknownAccount' style="display:none" class="mb-3">
                        <div class="notification">
                          <p class="error">Account doesn't exists</p>
                        </div>
                      </div>
                      <div id='emailIsEmpty' style="display:none" class="mb-3">
                        <div class="notification">
                          <p class="error">Empty required field email</p>
                        </div>
                      </div>
                      <div id='emailIsInvalid' style="display:none" class="mb-3">
                        <div class="notification">
                          <p class="error">Invalid email</p>
                        </div>
                      </div>
                      <div id='accountIsNotValidated' style="display:none" class="mb-3">
                        <div class="notification">
                          <p class="error">The account must be verified first</p>
                        </div>
                      </div>

                      <div id="forgotPasswordDiv" class="row">
                        <div class="col-lg-9">
                          <form method="post" id="forgotPasswordForm">
                            <input 
                              type="text" 
                              name="email" 
                              placeholder="Your email" 
                              required 
                              />
                          </form>
                        </div>
                        <div class="col-lg-3">
                          <div class="button-box mt-1" style="text-align:center;">
                            <button 
                              type="submit"
                              onclick="AbeloThemeCustomer.forgotPassword();"
                            ><span>Submit</span></button>
                          </div>
                        </div>
                      </div>
                    {% endif %}
                    <div id="recoveryPasswordSent" class="notification" style="display:none;">
                      <p class="success">✓ A password recovery link was successfully sent to your mail account.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- login area end -->