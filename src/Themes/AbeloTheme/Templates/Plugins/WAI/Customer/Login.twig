 <!-- login area start -->
  <div class="login-register-area mb-50px mt-40px">
    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-md-12 ml-auto mr-auto">
          <div class="login-register-wrapper">
            <div class="login-register-tab-list nav">
              <a class="active" data-toggle="tab" href="#lg1">
                <h4>{{ translate("Login", "Customer") }}</h4>
              </a>
              <a data-toggle="tab" href="#lg2">
                <h4>{{ translate("Register", "Customer") }}</h4>
              </a>
            </div>
            <div class="tab-content">
              <div id="lg1" class="tab-pane active">
                <div class="login-form-container">
                  <div class="login-register-form">
                    {% if user.loginFailed %}
                      <div class="notification mb-5">
                        <p class="error">{{ translate("Failed to login.", "Customer") }}</p>
                      </div>
                    {% endif %}
                    <form method="post" id="loginForm">
                      <input type="hidden" name="doLogin" value="1" />
                      <input type="email" name="loginEmail" placeholder="{{ translate("E-mail", "Customer") }}" required />
                      <input type="password" name="loginPassword" placeholder="{{ translate("Password", "Customer") }}" required />
                      <div class="button-box">
                        <div class="login-toggle-btn">
                          <input type="checkbox" name="rememberLogin" id="rememberLogin"/>
                          <label for="rememberLogin">{{ translate("Remember me", "Customer") }}</label>
                        </div>
                        <div class="login-toggle-btn">
                          <button 
                            type="submit"
                            onclick="sendLoginForm('loginForm');"
                          ><span>Login</span></button>
                          <a href="{{ rootUrl }}/{{ callPluginMethod('WAI/Customer/ForgotPassword', 'getWebPageUrl') }}">
                            {{ translate("Forgot password?", "Customer") }}
                          </a>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div id="lg2" class="tab-pane">
                <div class="login-form-container">
                  <div class="login-register-form">

                    <div id="emailIsEmptyOrInvalidErrorDiv" style="display:none;">
                      <div class="notification mb-5">
                        <p class="error">{{ translate("Email is incomplete or invalid.", "Customer") }}</p>
                      </div>
                    </div>
                    <div id="accountAlreadyExistsErrorDiv" style="display:none">
                      <div class="notification mb-5">
                        <p class="error">{{ translate("Such an account already exists.", "Customer") }}</p>
                      </div>
                    </div>
                    <div id="unknownErrorDiv" style="display:none;">
                      <div class="notification mb-5">
                        <p class="error">{{ translate("An unexpected error occurred while creating the account. Please try again later.", "Customer") }}</p>
                      </div>
                    </div>

                    <form method="post" id="registrationForm">
                      <input type="email" name="email" placeholder="{{ translate("Email", "Customer") }} *" />
                      <input type="text" name="given_name" placeholder="{{ translate("First name", "Customer") }} *" />
                      <input type="text" name="family_name" placeholder="{{ translate("Last name", "Customer") }} *" />
                      <div class="button-box">
                        <div class="login-toggle-btn">
                         <div class="notification">
                            <p id="privacyPolicyTermsErrorDiv">
                              <input type="checkbox" name="checkbox" id="privacyPolicyTermsConfirmation"/>
                              <label for="privacyPolicyTermsConfirmation">{{ translate("I agree with the processing of personal data.", "Customer") }}</label> 
                            </p>
                          </div>
                          <p id="privacyPolicyTermsErrorText" class="mt-2" style="color:#db2f23;display:none">
                            {{ translate("You must agree to the terms of processing of personal data.", "Customer") }}
                          </p>
                        </div>
                      </div>
                    </form>
                      <div class="button-box">
                        <div class="login-toggle-btn">
                          <button onclick="AbeloThemeCustomer.createAccount();">
                            <span>{{ translate("Register", "Customer") }}</span>
                          </button>
                          {% if showPrivacyTerms and privacyTermsUrl != "" %}
                            <a href="{{ rootUrl }}/{{ privacyTermsUrl }}" target="_blank">
                              {{ translate("Show conditions", "Customer") }}
                            </a>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- login area end -->